@model BLL.ViewModelManager

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    @{ if (DTO.UserSession.CurrentUser != null)
        {
            <h2 align="center">Bienvenu dans votre session @DTO.UserSession.CurrentUser.username</h2>
        }
        else
        {
            <h1>Bienvenu dans Hotel Management</h1><br>
            <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
            <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
        }
    }
</div>



<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Pictures/picture1.jpg" alt="Los Angeles">
        </div>
        <div class="item">
            <img src="~/Pictures/picture2.jpg" alt="Chicago">
        </div>
        <div class="item">
            <img src="~/Pictures/picture3.jpg" alt="New York">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row">
    <div class="col-md-4">
        <h2>Nos hotels</h2>
        <hr />
        <table>
            @foreach (var item in Model.Hotels)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Details","Hotel", new { id = item.id })">
                            <img id="imgLittle" src="~/Pictures/@item.image" />
                        </a>
                    </td>
                </tr>
            }
        </table>
        <p>
            ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
            enables a clean separation of concerns and gives you full control over markup
            for enjoyable, agile development.
        </p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Nos chambres</h2>
        <hr />
        <table>
            @foreach (var item in Model.Rooms)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Details","Room", new { id = item.id })">
                            <img id="imgLittle" src="~/Pictures/@item.image" />
                        </a>
                    </td>
                </tr>
            }
        </table>
        <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Contact</h2>
        <hr />
        <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
    </div>
</div>