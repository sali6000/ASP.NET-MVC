@model DTO.HotelEntity

<tr>
    <td id="textCenter">
        @Html.DisplayFor(item => item.name)
    </td>
    <th>
        <a href="@Url.Action("Details","Hotel", new { id = Model.id })">
            <img id="imgLittle" src="~/Pictures/@Model.image" />
        </a>
    </th>
    <td>
        @for (int i = 0; i < Model.star_number; i++)
        {
            <img id="imgStar" src="~/Pictures/etoile.jpg" />
        }
    </td>
    <td>
        @Html.DisplayFor(item => item.cp)
    </td>
    <td>
        @Html.DisplayFor(item => item.country)
    </td>
    <td>
        @Html.DisplayFor(item => item.capacity_rooms)
    </td>
    <td>
        @(Model.swimming_pool == true ? "Oui" : "Non")
    </td>
    <td>
        @(Model.driver == true ? "Oui" : "Non")
    </td>
    <td>
        @(Model.room_service == true ? "Oui" : "Non")
    </td>

    @{ if (DTO.UserSession.CurrentUser != null)
        {
            if (DTO.UserSession.CurrentUser.admin == true)
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
                    @Html.ActionLink("Details", "Details", new { id = Model.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = Model.id })
                </td>
            }
        }
    }
</tr>
